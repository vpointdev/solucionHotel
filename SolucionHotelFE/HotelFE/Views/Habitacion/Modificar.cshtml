@model HotelFE.Models.UsuarioModel
@{
    ViewData["Title"] = "Modificar Usuario";
}

<div class="container-fluid mt-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col">
            <h1 class="h2">Modificar Usuario</h1>
            <p class="text-muted">Usuario: @Model.NombreUsuario</p>
        </div>
    </div>

    <!-- Form Card -->
    <div class="card">
        <div class="card-body">
            <form asp-action="Modificar" asp-controller="Usuario" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <!-- Hidden Username field (if needed for reference) -->
                <input type="hidden" asp-for="NombreUsuario" />

                <div class="row g-4">
                    <!-- User Information Section -->
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="NombreUsuario" class="form-label fw-bold">Nombre de Usuario</label>
                            <input asp-for="NombreUsuario" class="form-control" disabled />
                            <span asp-validation-for="NombreUsuario" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Clave" class="form-label fw-bold">Contraseña</label>
                            <input asp-for="Clave" type="password" class="form-control" />
                            <span asp-validation-for="Clave" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Contact Information Section -->
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="CorreoRegistro" class="form-label fw-bold">Correo Electrónico</label>
                            <input asp-for="CorreoRegistro" type="email" class="form-control" />
                            <span asp-validation-for="CorreoRegistro" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="FechaRegistro" class="form-label fw-bold">Fecha de Registro</label>
                            <input asp-for="FechaRegistro" class="form-control" type="datetime-local"
                                   value="@Model.FechaRegistro.ToString("yyyy-MM-ddTHH:mm")" />
                            <span asp-validation-for="FechaRegistro" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Status Section -->
                    <div class="col-12">
                        <div class="card bg-light">
                            <div class="card-body">
                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox" asp-for="Estado" />
                                    <label class="form-check-label fw-bold" asp-for="Estado">
                                        Estado del Usuario
                                    </label>
                                </div>
                                <small class="text-muted">
                                    Un usuario inactivo no podrá acceder al sistema
                                </small>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Actions Section -->
                <div class="row mt-4">
                    <div class="col-12">
                        <hr class="mb-4" />
                        <div class="d-flex justify-content-between align-items-center">
                            <a asp-action="Index" asp-controller="Usuario"
                               class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Volver a la Lista
                            </a>
                            <button type="submit" class="btn btn-warning px-4">
                                <i class="fas fa-save me-2"></i>Guardar Cambios
                            </button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}