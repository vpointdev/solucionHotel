@model HabitacionModel

<div class="container mt-4">
    <h2>Crear Nueva Habitación</h2>

    <form asp-action="Crear" method="post">
        @Html.AntiForgeryToken()

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group mb-3">
            <label asp-for="NumeroHabitacion" class="form-label">Número de Habitación</label>
            <input asp-for="NumeroHabitacion" class="form-control" />
            <span asp-validation-for="NumeroHabitacion" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="TipoHabitacionId" class="form-label">Tipo de Habitación</label>
            <select asp-for="TipoHabitacionId" class="form-select"
                    asp-items='@(new SelectList(ViewBag.TiposHabitacion, "TipoHabitacionId", "Nombre"))'>
                <option value="">-- Seleccione un tipo de habitación --</option>
            </select>
            <span asp-validation-for="TipoHabitacionId" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Piso" class="form-label">Piso</label>
            <input asp-for="Piso" class="form-control" type="number" min="1" />
            <span asp-validation-for="Piso" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Observaciones" class="form-label">Observaciones</label>
            <textarea asp-for="Observaciones" class="form-control" rows="3"></textarea>
            <span asp-validation-for="Observaciones" class="text-danger"></span>
        </div>

        <div class="form-group mt-4">
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save"></i> Crear
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Volver a la lista
            </a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}