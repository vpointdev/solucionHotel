@{
    ViewData["Title"] = "Home";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h1 class="display-5 mb-3">
                <i class="fas fa-hotel me-2 text-primary"></i>
                Sistema de Gestión Hotelera
            </h1>
            <p class="lead text-muted mb-4">Seleccione un módulo para comenzar</p>
        </div>
    </div>

    <!-- Module Cards -->
    <div class="row justify-content-center g-4">
        

        <!-- Reservaciones -->
        <div class="col-xl-3 col-md-4 col-sm-6">
            <a href="/Reservacion" class="text-decoration-none">
                <div class="card h-100 shadow-sm border-0 bg-light">
                    <div class="card-body text-center p-4">
                        <div class="mb-3">
                            <i class="fas fa-calendar-alt fa-3x text-info"></i>
                        </div>
                        <h5 class="card-title mb-2">Reservaciones</h5>
                        <p class="card-text text-muted small">Gestión de reservas y check-in/out</p>
                    </div>
                </div>
            </a>
        </div>

        <!-- Habitaciones -->
        <div class="col-xl-3 col-md-4 col-sm-6">
            <a href="/Habitacion" class="text-decoration-none">
                <div class="card h-100 shadow-sm border-0 bg-light">
                    <div class="card-body text-center p-4">
                        <div class="mb-3">
                            <i class="fas fa-bed fa-3x text-success"></i>
                        </div>
                        <h5 class="card-title mb-2">Habitaciones</h5>
                        <p class="card-text text-muted small">Control y estado de habitaciones</p>
                    </div>
                </div>
            </a>
        </div>
      
        <!-- Usuarios -->
        <div class="col-xl-3 col-md-4 col-sm-6">
            <a href="/Usuario" class="text-decoration-none">
                <div class="card h-100 shadow-sm border-0 bg-light">
                    <div class="card-body text-center p-4">
                        <div class="mb-3">
                            <i class="fas fa-users fa-3x text-primary"></i>
                        </div>
                        <h5 class="card-title mb-2">Usuarios</h5>
                        <p class="card-text text-muted small">Gestión de usuarios y perfiles del sistema</p>
                    </div>
                </div>
            </a>
        </div>

        <!-- Configuración -->
        <div class="col-xl-3 col-md-4 col-sm-6">
            <a href="/Bitacora" class="text-decoration-none">
                <div class="card h-100 shadow-sm border-0 bg-light">
                    <div class="card-body text-center p-4">
                        <div class="mb-3">
                            <i class="fas fa-cogs fa-3x text-secondary"></i>
                        </div>
                        <h5 class="card-title mb-2">Bitacoras</h5>
                        <p class="card-text text-muted small">Revisar las bitacoras del sistema</p>
                    </div>
                </div>
            </a>
        </div>
    </div>
</div>
