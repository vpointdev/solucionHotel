@model HotelFE.Models.BitacoraModel
@{
    ViewData["Title"] = "Nuevo Registro de Bitácora";
}

<div class="container-fluid mt-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col">
            <h1 class="h2">Crear Registro de Bitácora</h1>
            <p class="text-muted">Complete el formulario con la información requerida</p>
        </div>
    </div>

    <!-- Form Card -->
    <div class="card">
        <div class="card-body">
            <form asp-action="GuardarRegistroNuevo" asp-controller="Bitacora" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <div class="row g-4">
                    <!-- Date and User Section -->
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="FechaRegistro" class="form-label fw-bold"></label>
                            <input asp-for="FechaRegistro" class="form-control" type="datetime-local" />
                            <span asp-validation-for="FechaRegistro" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="UsuarioRegistro" class="form-label fw-bold"></label>
                            <input asp-for="UsuarioRegistro" maxlength="20" class="form-control" />
                            <span asp-validation-for="UsuarioRegistro" class="text-danger"></span>
                            <div class="form-text">Máximo 20 caracteres</div>
                        </div>
                    </div>

                    <!-- Action and Module Section -->
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="AccesionRealizada" class="form-label fw-bold"></label>
                            <select asp-for="AccesionRealizada" class="form-select">
                                <option value="">Seleccione una acción...</option>
                                <option value="Crear">Crear</option>
                                <option value="Leer">Leer</option>
                                <option value="Actualizar">Actualizar</option>
                                <option value="Eliminar">Eliminar</option>
                                <option value="Login">Login</option>
                                <option value="Logout">Logout</option>
                            </select>
                            <span asp-validation-for="AccesionRealizada" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ModuloSistema" class="form-label fw-bold"></label>
                            <select asp-for="ModuloSistema" class="form-select">
                                <option value="">Seleccione un módulo...</option>
                                <option value="Usuarios">Usuarios</option>
                                <option value="Habitaciones">Habitaciones</option>
                                <option value="Reservaciones">Reservaciones</option>
                                <option value="Pagos">Pagos</option>
                                <option value="Reportes">Reportes</option>
                                <option value="Sistema">Sistema</option>
                            </select>
                            <span asp-validation-for="ModuloSistema" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Description Section -->
                    <div class="col-12">
                        <div class="mb-3">
                            <label asp-for="Descripcion" class="form-label fw-bold"></label>
                            <textarea asp-for="Descripcion" class="form-control" rows="3"
                                      placeholder="Ingrese una descripción detallada de la acción realizada..."></textarea>
                            <span asp-validation-for="Descripcion" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <!-- Actions Section -->
                <div class="row mt-4">
                    <div class="col-12">
                        <hr class="mb-4" />
                        <div class="d-flex justify-content-between align-items-center">
                            <a asp-action="Index" asp-controller="Bitacora"
                               class="btn btn-outline-secondary">
                                Volver a la Lista
                            </a>
                            <button type="submit" class="btn btn-primary px-4">
                                Guardar Registro
                            </button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}