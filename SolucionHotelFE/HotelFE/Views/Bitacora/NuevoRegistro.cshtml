@model HotelFE.Models.BitacoraModel
@{
    ViewData["Title"] = "Nuevo Registro de Bitácora";
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col">
            <h1 class="h2">Nuevo Registro de Bitácora</h1>
            <p class="text-muted">Complete el formulario para registrar una nueva actividad en el sistema</p>
        </div>
    </div>

    <div class="card">
        <div class="card-header bg-white py-3">
            <h5 class="mb-0">
                <i class="fas fa-plus-circle me-2"></i>Datos del Registro
            </h5>
        </div>

        <div class="card-body">
            <form asp-action="GuardarRegistroNuevo" asp-controller="Bitacora" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger d-flex align-items-center" role="alert">
                    <i class="fas fa-exclamation-circle me-2"></i>
                    <div>Por favor, corrija los errores indicados.</div>
                </div>

                <div class="row g-4">
                    <!-- Fecha y Usuario -->
                    <div class="col-md-6">
                        <div class="card bg-light border-0">
                            <div class="card-body">
                                <h6 class="card-subtitle mb-3 text-muted">
                                    <i class="fas fa-info-circle me-2"></i>Información Básica
                                </h6>

                                <div class="mb-3">
                                    <label asp-for="FechaRegistro" class="form-label fw-bold">
                                        <i class="fas fa-calendar-alt me-1"></i>Fecha y Hora
                                    </label>
                                    <input asp-for="FechaRegistro" class="form-control" type="datetime-local" />
                                    <span asp-validation-for="FechaRegistro" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="UsuarioRegistro" class="form-label fw-bold">
                                        <i class="fas fa-user me-1"></i>Usuario
                                    </label>
                                    <input asp-for="UsuarioRegistro" maxlength="20" class="form-control"
                                           placeholder="Ingrese el nombre de usuario" />
                                    <span asp-validation-for="UsuarioRegistro" class="text-danger"></span>
                                    <small class="text-muted">
                                        <i class="fas fa-info-circle me-1"></i>Máximo 20 caracteres
                                    </small>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Acción y Módulo -->
                    <div class="col-md-6">
                        <div class="card bg-light border-0">
                            <div class="card-body">
                                <h6 class="card-subtitle mb-3 text-muted">
                                    <i class="fas fa-cog me-2"></i>Detalles de la Acción
                                </h6>

                                <div class="mb-3">
                                    <label asp-for="AccesionRealizada" class="form-label fw-bold">
                                        <i class="fas fa-tasks me-1"></i>Acción Realizada
                                    </label>
                                    <select asp-for="AccesionRealizada" class="form-select">
                                        <option value="">Seleccione una acción...</option>
                                        <option value="Crear">Crear</option>
                                        <option value="Leer">Leer</option>
                                        <option value="Actualizar">Actualizar</option>
                                        <option value="Eliminar">Eliminar</option>
                                        <option value="Login">Login</option>
                                        <option value="Logout">Logout</option>
                                    </select>
                                    <span asp-validation-for="AccesionRealizada" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="ModuloSistema" class="form-label fw-bold">
                                        <i class="fas fa-cube me-1"></i>Módulo del Sistema
                                    </label>
                                    <select asp-for="ModuloSistema" class="form-select">
                                        <option value="">Seleccione un módulo...</option>
                                        <option value="Usuarios">Usuarios</option>
                                        <option value="Habitaciones">Habitaciones</option>
                                        <option value="Reservaciones">Reservaciones</option>
                                        <option value="Pagos">Pagos</option>
                                        <option value="Reportes">Reportes</option>
                                        <option value="Sistema">Sistema</option>
                                    </select>
                                    <span asp-validation-for="ModuloSistema" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Descripción -->
                    <div class="col-12">
                        <div class="card bg-light border-0">
                            <div class="card-body">
                                <h6 class="card-subtitle mb-3 text-muted">
                                    <i class="fas fa-align-left me-2"></i>Descripción Detallada
                                </h6>

                                <div class="mb-3">
                                    <label asp-for="Descripcion" class="form-label fw-bold">
                                        Descripción de la Actividad
                                    </label>
                                    <textarea asp-for="Descripcion" class="form-control" rows="4"
                                              placeholder="Ingrese una descripción detallada de la acción realizada..."></textarea>
                                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                                    <small class="text-muted">
                                        <i class="fas fa-info-circle me-1"></i>Proporcione detalles específicos sobre la acción realizada
                                    </small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row mt-4">
                    <div class="col-12">
                        <hr class="mb-4" />
                        <div class="d-flex justify-content-between align-items-center">
                            <a asp-action="Index" asp-controller="Bitacora" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Volver a la Lista
                            </a>
                            <button type="submit" class="btn btn-primary px-4">
                                <i class="fas fa-save me-2"></i>Guardar Registro
                            </button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}