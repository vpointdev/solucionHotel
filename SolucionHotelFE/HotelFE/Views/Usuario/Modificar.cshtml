@model UsuarioModel
@{
    ViewData["Title"] = "Modificar Usuario";
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col">
            <h1 class="h2">Modificar Usuario</h1>
            <p class="text-muted">Usuario: @Model.NombreUsuario</p>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <form asp-action="Modificar" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <input type="hidden" asp-for="UsuarioId" />

                <div class="row g-4">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="NombreUsuario" class="form-label fw-bold">
                                Nombre de Usuario
                            </label>
                            <input asp-for="NombreUsuario" class="form-control" />
                            <span asp-validation-for="NombreUsuario" class="text-danger"></span>
                            <small class="text-muted">Dejar vacío para mantener el actual</small>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Clave" class="form-label fw-bold">
                                Nueva Contraseña
                            </label>
                            <input asp-for="Clave" type="password" class="form-control"
                                   placeholder="Dejar vacío para mantener la actual" />
                            <span asp-validation-for="Clave" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="CorreoRegistro" class="form-label fw-bold">
                                Correo Electrónico
                            </label>
                            <input asp-for="CorreoRegistro" type="email" class="form-control" />
                            <span asp-validation-for="CorreoRegistro" class="text-danger"></span>
                            <small class="text-muted">Dejar vacío para mantener el actual</small>
                        </div>

                        <div class="mb-3">
                            <label asp-for="FechaRegistro" class="form-label fw-bold">
                                Fecha de Registro
                            </label>
                            <input asp-for="FechaRegistro" class="form-control" type="datetime-local"
                                   value="@Model.FechaRegistro.ToString("yyyy-MM-ddTHH:mm")" readonly />
                            <small class="text-muted">La fecha de registro no se puede modificar</small>
                        </div>
                    </div>

                    <div class="col-12">
                        <div class="card bg-light">
                            <div class="card-body">
                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox" asp-for="Estado" />
                                    <label class="form-check-label fw-bold" asp-for="Estado">
                                        Estado del Usuario
                                    </label>
                                </div>
                                <small class="text-muted">
                                    Un usuario inactivo no podrá acceder al sistema
                                </small>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row mt-4">
                    <div class="col-12">
                        <hr class="mb-4" />
                        <div class="d-flex justify-content-between align-items-center">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Volver a la Lista
                            </a>
                            <button type="submit" class="btn btn-primary px-4">
                                <i class="fas fa-save me-2"></i>Guardar Cambios
                            </button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}