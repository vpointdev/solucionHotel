@model UsuarioModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>HotelFE - Inicio de sesión</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
</head>
<body class="bg-light">
    <div class="min-vh-100 d-flex align-items-center">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-8">
                    <div class="card shadow">
                        <div class="card-body p-0">
                            <div class="row g-0">
                                <!-- Columna de Login -->
                                <div class="col-md-6 p-4">
                                    <div class="text-center mb-4">
                                        <i class="fas fa-hotel text-primary fs-1"></i>
                                        <h4 class="mt-2">Iniciar Sesión</h4>
                                    </div>

                                    <form asp-action="IniciarSesion" asp-controller="Autenticacion" method="post">
                                        <div class="mb-3">
                                            <label class="form-label">
                                                <i class="fas fa-user me-1"></i>Usuario:
                                            </label>
                                            <input type="text"
                                                   class="form-control"
                                                   maxlength="20"
                                                   placeholder="ejemplo: usuario2024"
                                                   asp-for="NombreUsuario"
                                                   required />
                                        </div>
                                        <div class="mb-4">
                                            <label class="form-label">
                                                <i class="fas fa-lock me-1"></i>Contraseña:
                                            </label>
                                            <input type="password"
                                                   class="form-control"
                                                   maxlength="15"
                                                   placeholder="Ingrese su contraseña"
                                                   asp-for="Clave"
                                                   required />
                                        </div>
                                        <div class="d-grid">
                                            <button type="submit" class="btn btn-primary">
                                                <i class="fas fa-sign-in-alt me-1"></i>
                                                Ingresar
                                            </button>
                                        </div>
                                    </form>
                                </div>

                                <!-- Columna de Registro -->
                                <div class="col-md-6 bg-primary text-white p-4">
                                    <div class="text-center mb-4">
                                        <i class="fas fa-user-plus fs-1"></i>
                                        <h4 class="mt-2">Registro de Cliente</h4>
                                    </div>
                                    <p class="text-center mb-4">
                                        ¿Aún no tienes una cuenta? Regístrate para hacer reservaciones y disfrutar de nuestros servicios.
                                    </p>
                                    <div class="d-grid">
                                        <a asp-controller="Autenticacion"
                                           asp-action="Registro"
                                           class="btn btn-outline-light">
                                            <i class="fas fa-user-plus me-1"></i>
                                            Crear Cuenta
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(ViewBag.Error))
                    {
                        <div class="alert alert-danger mt-3 text-center">
                            <i class="fas fa-exclamation-circle me-1"></i>
                            @ViewBag.Error
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>